<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InForma</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>inForma</title>

    <!--Import materialize.css-->
    <link rel="stylesheet" href="~/css/materialize.css">
    <!-- Import icons from weather-icons -->
    <link rel="stylesheet" type="text/css" href="~/weather-icons-master/css/weather-icons.min.css">
    <!-- Google Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/css/public.css" rel="stylesheet">
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
    <style>
        #parallaxIndex {
            height: 200px;
        }

        #bemvindo {
            color: #fff;
        }

        #data {
            color: #fff;
            margin-top: 80px;
        }

        #temperaturaDados {
            margin-top: -10px;
            color: #fff;
            font-size: 18px;
        }

        #horario {
            color: #fff;
            font-size: 30px;
            margin-top: 160px;
        }
    </style>
</head>
<body>

    <!-- TOP SIDE -->
    <nav>
        <div class="nav-wrapper" style="background-color: #af2405;">
            <div class="row container">
                <a href="#" data-activates="slide-out" class="button-collapse show-on-large">
                    <i class="material-icons">menu</i>
                </a>
                <a href="#" class="brand-logo"><img src="~/Imagens/informa.png" width="200" class="img-responsive"></a>
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li><a href="index.html">Home</a></li>
                    <li><a href="badges.html">Components</a></li>
                    <li><a href="collapsible.html">JavaScript</a></li>
                </ul>
            </div>
        </div>
    </nav>


    <!-- CONTENT SIDE NAVBAR -->
    <ul id="slide-out" class="side-nav">
        <li>
            <div class="user-view">
                <div class="background" style="background-color: #af2405;">
                    <img src="~/Imagens/icon-informa.png" width="80" style="position: relative; left: 180px; top: 40px;">
                </div>
                <a href="#!user"><img class="circle" src="~/Imagens/avatar-batman.png"></a>
                <a href="#!name"><span class="white-text name">Diego Magalhaes</span></a>
                <a href="#!email"><span class="white-text email">Recepcionista - Unidade Osasco</span></a>
            </div>
        </li>
        <li><a class="subheader">Modulos</a></li>
        <ul class="collapsible collapsible-accordion">
            <li>
                <a class="collapsible-header waves-effect waves-blue ">
                    <i class="material-icons"
                       style="position: relative; left: 17px;">edit</i>Cadastro<i class="material-icons right"
                                                                                  style="margin-right:0;">arrow_drop_down</i>
                </a>
                <div class="collapsible-body">
                    <ul>
                        <li>
                            <a class="waves-effect waves-blue"
                               href="cadastro/cadastro_unidade.html"><span>Unidade</span></a>
                        </li>
                        <li>
                            <a class="waves-effect waves-blue"
                               href="cadastro/cadastro_modalidade.html"><span>Modalidade</span></a>
                        </li>
                        <li><a class="waves-effect waves-blue" href="#"><span>Tipo de Colaborador</span></a></li>
                        <li><a class="waves-effect waves-blue" href="#"><span>Colaborador</span></a></li>
                        <li><a class="waves-effect waves-blue" href="#"><span>Fornecedor</span></a></li>
                        <li>
                            <div class="divider"></div>
                        </li>
                    </ul>
                </div>
            </li>
        </ul>
        <!-- FINAL MENU CADASTRO DROPDOWN -->

        <ul class="collapsible collapsible-accordion">
            <li>
                <a class="collapsible-header waves-effect waves-blue ">
                    <i class="material-icons"
                       style="position: relative; left: 17px;">person_pin</i>Agenda <i class="material-icons right"
                                                                                       style="margin-right:0;">arrow_drop_down</i>
                </a>
                <div class="collapsible-body">
                    <ul>
                        <li><a class="waves-effect waves-blue" href="#"><span>Verificar tal coisa</span></a></li>
                        <li>
                            <div class="divider"></div>
                        </li>
                    </ul>
                </div>
            </li>
        </ul>
        <!-- FINAL MENU AGENDA DROPDOWN -->

        <ul class="collapsible collapsible-accordion">
            <li>
                <a class="collapsible-header waves-effect waves-blue ">
                    <i class="material-icons"
                       style="position: relative; left: 17px;">person_pin</i>Matrícula <i class="material-icons right"
                                                                                          style="margin-right:0;">arrow_drop_down</i>
                </a>
                <div class="collapsible-body">
                    <ul>
                        <li>
                            <a class="waves-effect waves-blue" href="matricula/gerenciarPagamento.html">
                                <span>
                                    Gerenciar
                                    Pagamento
                                </span>
                            </a>
                        </li>
                        <li>
                            <div class="divider"></div>
                        </li>
                    </ul>
                </div>
            </li>
        </ul>
        <!-- FINAL MENU MATRICULA DROPDOWN -->

        <ul class="collapsible collapsible-accordion">
            <li>
                <a class="collapsible-header waves-effect waves-blue ">
                    <i class="material-icons"
                       style="position: relative; left: 17px;">person_pin</i>Financeiro <i class="material-icons right"
                                                                                           style="margin-right:0;">arrow_drop_down</i>
                </a>
                <div class="collapsible-body">
                    <ul>
                        <li><a class="waves-effect waves-blue" href="#"><span>Verificar tal coisa</span></a></li>
                        <li>
                            <div class="divider"></div>
                        </li>
                    </ul>
                </div>
            </li>
        </ul>
        <!-- FINAL MENU FINANCEIRO DROPDOWN -->

        <ul class="collapsible collapsible-accordion">
            <li>
                <a class="collapsible-header waves-effect waves-blue ">
                    <i class="material-icons"
                       style="position: relative; left: 17px;">person_pin</i>Estoque <i class="material-icons right"
                                                                                        style="margin-right:0;">arrow_drop_down</i>
                </a>
                <div class="collapsible-body itensSubMenu">
                    <ul>
                        <li><a class="waves-effect waves-blue" href="#"><span>Verificar tal coisa</span></a></li>
                        <li>
                            <div class="divider"></div>
                        </li>
                    </ul>
                </div>
            </li>
        </ul>
        <!-- FINAL MENU ESTOQUE DROPDOWN -->

        <li>
            <div class="divider"></div>
        </li>
        <li><a class="subheader">Catraca</a></li>
        <li><a class="waves-effect" href="#!">Cadastro ??</a></li>

        <div class="col s12 l12 center" style="position: relative; top:280px;">
            <img src="~/Imagens/churrosteam.png" width="100" class="img-responsive">
        </div>
    </ul>
    <!-- FINAL DO SIDENAV -->
    <script src="~/js/site.js"></script>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2019 - InForma - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@
    <script src="~/js/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/materialize.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
